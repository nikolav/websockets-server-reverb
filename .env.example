# =============================================================================
# Application identity & base URLs
# -----------------------------------------------------------------------------
# Core app identity and canonical URL
# =============================================================================
APP_NAME=Laravel
APP_KEY=
APP_URL=http://localhost:8000


# =============================================================================
# Application environment & debug mode
# -----------------------------------------------------------------------------
# Controls environment-specific behavior and error visibility
# =============================================================================
APP_ENV=local
APP_DEBUG=true
# APP_ENV=production
# APP_DEBUG=false


# =============================================================================
# Localization & language settings
# -----------------------------------------------------------------------------
# Default language, fallbacks, and faker locale
# =============================================================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US


# =============================================================================
# Maintenance mode
# -----------------------------------------------------------------------------
# Determines how maintenance mode state is stored
# =============================================================================
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database


# =============================================================================
# PHP / security defaults
# -----------------------------------------------------------------------------
# Password hashing cost and low-level runtime knobs
# =============================================================================
BCRYPT_ROUNDS=12
# PHP_CLI_SERVER_WORKERS=4


# =============================================================================
# Logging configuration
# -----------------------------------------------------------------------------
# Centralized logging strategy and verbosity
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug


# =============================================================================
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Primary relational database connection
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=


# =============================================================================
# Session management
# -----------------------------------------------------------------------------
# Session storage and cookie behavior
# =============================================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=


# =============================================================================
# Cache, queue, filesystem & broadcasting
# -----------------------------------------------------------------------------
# Core infrastructure services used by the framework
# =============================================================================
CACHE_STORE=redis
CACHE_PREFIX=

QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local

MEMCACHED_HOST=127.0.0.1


# =============================================================================
# Redis
# -----------------------------------------------------------------------------
# Redis connection used for cache, queues, and sessions
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=
REDIS_PORT=6379
# REDIS_PASSWORD=


# =============================================================================
# Mail
# -----------------------------------------------------------------------------
# Outbound mail configuration
# =============================================================================
MAIL_MAILER=log
MAIL_SCHEME=
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"


# =============================================================================
# AWS / S3 (optional)
# -----------------------------------------------------------------------------
# Object storage configuration
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false


# =============================================================================
# Frontend (Vite)
# -----------------------------------------------------------------------------
# Environment variables exposed to frontend builds
# =============================================================================
VITE_APP_NAME="${APP_NAME}"


# =============================================================================
# Reverb (WebSocket server)
# -----------------------------------------------------------------------------
# Centralized WebSocket infrastructure (Pusher-compatible)
#
# Typical setups:
# - Local / Docker:
#   REVERB_SCHEME=http
#   REVERB_HOST=reverb
#   REVERB_PORT=8080
#
# - Production (behind TLS):
#   REVERB_SCHEME=https
#   REVERB_HOST=reverb.yourdomain.com
#   REVERB_PORT=443
# =============================================================================
REVERB_SCHEME=
REVERB_HOST=
REVERB_PORT=

REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
